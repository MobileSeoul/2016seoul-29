<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="#000000"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="horizontal"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:background="#ffffe0"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="148dp"
                android:layout_height="148dp"
                android:id="@+id/food_detail_thumb"
                android:src="@mipmap/ic_launcher"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                android:layout_margin="5dp" />
        </RelativeLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#ffffff"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="이름"
                android:id="@+id/food_detail_name"
                android:layout_margin="5dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#ffffff"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="전화번호"
                android:id="@+id/food_detail_callnum"
                android:layout_margin="5dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="분류"
                android:textColor="#ffffff"
                android:id="@+id/food_detail_category"
                android:layout_margin="5dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#ffffff"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="이용시간"
                android:id="@+id/food_detail_operation"
                android:layout_margin="5dp" />


        </LinearLayout>
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="음식이름x4"
        android:textColor="#ffffff"
        android:gravity="center_horizontal"
        android:id="@+id/food_detail_menu"
        android:layout_below="@+id/linearLayout"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_below="@+id/food_detail_menu"
        android:layout_alignParentStart="true"
        android:id="@+id/linearLayout2">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/food_detail_iv1"
            android:onClick="onClick"
            android:src="@mipmap/ic_launcher"
            android:layout_margin="10dp" />

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/food_detail_iv2"
            android:onClick="onClick"
            android:src="@mipmap/ic_launcher"
            android:layout_margin="10dp" />

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:onClick="onClick"
            android:id="@+id/food_detail_iv3"
            android:src="@mipmap/ic_launcher"
            android:layout_margin="10dp" />

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#ffffff"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="주소"
        android:gravity="center_horizontal"
        android:id="@+id/food_detail_address"
        android:layout_below="@+id/linearLayout2"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_margin="5dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id = "@+id/navilayout"
        android:layout_below="@+id/food_detail_address"
        android:layout_alignParentStart="true"
        android:layout_margin="10dp"></RelativeLayout>

</RelativeLayout>
